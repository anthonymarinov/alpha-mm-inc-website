---
title: "Services"

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <Header />
    <main class="relative flex-auto min-w-0 flex flex-col min-h-screen px-2 md:px-0 justify-between">
        <div class="relative bg-[url('/calendar.jpg')] bg-cover bg-center h-[95vh]">
            <div class="absolute inset-0 bg-black bg-opacity-40 z-0"></div>
            <div class="relative z-10 flex flex-col items-left ml-40 mr-40 justify-center h-full">
                <h1 class="text-left text-white text-6xl font-bold max-w-sm">
                    CONTACT US
                </h1>
                <p class="text-left text-white text-xl max-w-2xl font-semibold mt-7">
                    Alpha MM Inc is ready to answer your questions and help your project get started with a free estimate. 
                    With over 20 years in the Los Angeles area, we specialize in delivering expert waterproofing solutions.
                </p>
                <a href="/projects/" 
                    class="text-center text-white text-2xl font-bold max-w-72 mt-10 inline-block px-6 py-3 border-2 border-white rounded-lg cursor-pointer hover:bg-white hover:text-black transition duration-300 ease-in-out">
                    VIEW OUR WORK âžœ
                </a>
            </div>
        </div>

        <section class="bg-gray-100 p-8 mt-10">
            <h1 class="text-3xl font-bold text-center mb-8">
                Get In Touch
            </h1>
            <form id="contactForm" class="max-w-lg mx-auto">
                <div class="mb-4">
                    <label for="name" class="block text-lg font-semibold">
                        Name:
                    </label>
                    <input type="text" id="name" name="name" class="w-full p-3 mt-2 border border-gray-300 rounded" required>
                </div>

                <div class="mb-4">
                    <label for="email" class="block text-lg font-semibold">
                        Return Email:
                    </label>
                    <input type="email" id="email" name="email" class="w-full p-3 mt-2 border border-gray-300 rounded" required>
                </div>

                <div class="mb-4">
                    <label for="phone" class="block text-lg font-semibold">Phone Number:</label>
                    <input type="tel" id="phone" name="phone" class="w-full p-3 mt-2 border border-gray-300 rounded" required>
                </div>

                <div class="mb-4">
                    <label for="message" class="block text-lg font-semibold">Message:</label>
                    <textarea id="message" name="message" rows="4" class="w-full p-3 mt-2 border border-gray-300 rounded" required></textarea>
                </div>

                <div class="text-center">
                    <input type="submit" value="Send Message" class="px-6 py-3 bg-blue-500 text-white font-semibold rounded-lg cursor-pointer hover:bg-blue-600 transition duration-300 ease-in-out">
                </div>
            </form>
        </section>

        <script>
            document.addEventListener('DOMContentLoaded', function() 
            {
                const contactForm = document.getElementById('contactForm');
                if (contactForm) 
                {
                    contactForm.addEventListener('submit', function(event) 
                    {
                        event.preventDefault();
        
                        const nameElement = document.getElementById('name') as HTMLInputElement;
                        const emailElement = document.getElementById('email') as HTMLInputElement;
                        const phoneElement = document.getElementById('phone') as HTMLInputElement;
                        const messageElement = document.getElementById('message') as HTMLTextAreaElement;
        
                        if (nameElement && emailElement && messageElement) 
                        {
                            var name = encodeURIComponent(nameElement.value);
                            var email = encodeURIComponent(emailElement.value);
                            var phone = encodeURIComponent(phoneElement ? phoneElement.value : '');
                            var message = encodeURIComponent(messageElement.value);
        
                            var subject = "Contact Form Submission: " + name;
                            var body = "Name: " + name + "%0A" +
                                       "Email: " + email + "%0A" +
                                       "Phone: " + phone + "%0A%0A" +
                                       "Message: " + "%0A" + message;
        
                            var mailtoLink = "mailto:mimarinov@yahoo.com?subject=" + subject + "&body=" + body;
        
                            window.location.href = mailtoLink;
                        } 
                        else 
                        {
                            console.error('Form elements are missing!');
                        }
                    });
                }
                else 
                {
                    console.error('Form element not found!');
                }
            });
        </script>                

        <Footer />
    </main>   
</Layout>
