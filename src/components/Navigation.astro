<nav class="px-4 md:px-40 py-3 flex items-center justify-between relative bg-slate-800 bg-opacity-0">

  <div class="flex items-center space-x-4">
    <a href="/">
      <img
        class="h-10 md:h-14"
        src="/alpha-logo.png"
        alt="Alpha MM Inc Logo"
      />
    </a>
    <a href="/" class="text-xl md:text-2xl font-bold text-white">
      Alpha MM Inc
    </a>
  </div>

  <button
    id="menu-btn"
    class="md:hidden text-white focus:outline-none"
    type="button"
    aria-label="Toggle Navigation Menu"
    aria-expanded="false"
    aria-controls="nav-links"
  >
    <svg
      class="w-6 h-6"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M4 6h16M4 12h16M4 18h16"
      />
    </svg>
  </button>

  <div
    id="nav-links"
    class="
      hidden
      flex
      md:flex
      md:flex-row
      md:space-x-10
      text-lg font-semibold text-white

      absolute top-full right-0 bg-slate-800
      flex-col space-y-2 py-4 px-10 mt-4  

      md:static md:w-auto md:bg-transparent md:py-0 md:px-0 md:space-y-0

      transition-all duration-300 ease-in-out
    "
  >
    <a
      href="/about/"
      class="hover:text-blue-400 transition duration-300 ease-in-out py-2 md:py-0"
    >
      About
    </a>
    <a
      href="/services/"
      class="hover:text-blue-400 transition duration-300 ease-in-out py-2 md:py-0"
    >
      Services
    </a>
    <a
      href="/projects/"
      class="hover:text-blue-400 transition duration-300 ease-in-out py-2 md:py-0"
    >
      Projects
    </a>
    <a
      href="/contact/"
      class="hover:text-blue-400 transition duration-300 ease-in-out py-2 md:py-0"
    >
      Contact
    </a>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuBtn = document.getElementById('menu-btn');
    const navLinks = document.getElementById('nav-links');

    const toggleMenu = (event) => {
      event.stopPropagation();
      navLinks.classList.toggle('hidden');
      const isExpanded = navLinks.classList.contains('hidden') ? 'false' : 'true';
      menuBtn.setAttribute('aria-expanded', isExpanded);
    };

    const closeMenu = () => {
      if (!navLinks.classList.contains('hidden')) {
        navLinks.classList.add('hidden');
        menuBtn.setAttribute('aria-expanded', 'false');
      }
    };

    menuBtn.addEventListener('click', toggleMenu);

    document.addEventListener('click', (event) => {
      const isClickInsideMenu = navLinks.contains(event.target);
      const isClickOnMenuBtn = menuBtn.contains(event.target);
      if (!isClickInsideMenu && !isClickOnMenuBtn) {
        closeMenu();
      }
    });

    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape') {
        closeMenu();
      }
    });
  });
</script>